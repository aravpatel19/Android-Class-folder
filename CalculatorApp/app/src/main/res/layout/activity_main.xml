<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_equation"
            android:layout_width="253dp"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:text="equation"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/id_answer"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="480dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_1"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_4"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_7"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_C"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="C"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_2"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_5"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_8"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_0"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="0"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_3"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_6"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_9"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_equals"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="="
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_add"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="+"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_subtract"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="-"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_multiply"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="*"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_divide"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:text="/"
                android:textSize="36sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>